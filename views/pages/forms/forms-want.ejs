    <script>
        window.onscroll = function () { updateProgressBar() };
        /**
         * Atualiza a barra de progresso com base no scroll da página.
         */
        function updateProgressBar() {
            var winScroll = document.body.scrollTop || document.documentElement.scrollTop;
            var height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
            var scrolled = (winScroll / height) * 100;
            document.getElementById("progressBar").style.width = scrolled + "%";
        }



        const rangeInputs = document.querySelectorAll('#years_with_dog, #num_pets, #age_at_arrival, #vet_visits');
        /**
         * Atualiza o plano de fundo de um elemento de faixa (range) com base no valor selecionado.
         * @param {HTMLElement} element - O elemento de faixa (range) a ser atualizado.
         */
        function updateRangeBackground(element) {
            const value = (element.value - element.min) / (element.max - element.min) * 100;
            element.style.setProperty('--value', value + '%');
        }

        rangeInputs.forEach(input => {
            input.addEventListener('input', () => updateRangeBackground(input));
            // Chamada inicial para definir o background ao carregar a página
            updateRangeBackground(input);
        });



        // Seleção dos elementos de entrada do tipo rádio:
        document.querySelectorAll('.button-group input[type="radio"]').forEach(radio => {
            // Utiliza o método forEach para iterar sobre todos os elementos de entrada do tipo rádio selecionados.
            radio.addEventListener('change', function () {
                // Para cada elemento de entrada do tipo rádio, adiciona um ouvinte de evento (event listener) que dispara quando o valor do botão de rádio é alterado (ou seja, quando um botão de rádio diferente é selecionado).
                document.querySelectorAll('.button-group .button-resp').forEach(label => {
                    if (label.htmlFor === this.id) {
                        label.style.backgroundColor = '#4A7757';
                        label.style.color = '#ffffff';
                    } else {
                        label.style.backgroundColor = '#fffff8';
                        label.style.color = '#325538';
                    }
                });
            });
        });
    </script>
